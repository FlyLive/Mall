<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body onload="StartTime()">
    <div class="wrap">
        <div class="navbar-head">
            <div class="head">
                <div class="logo">
                    <a href="#">
                        <img src="~/Pictures/Shared/云翳(logo).png" title="主页" />
                    </a>
                    <img src="~/Pictures/Shared/Welcome.png" />
                </div>
                <div class="head-message">
                    <input placeholder="搜索书籍名称"/>
                    <span>
                        @DateTime.Now.Month 月 @DateTime.Now.Day 日 @DateTime.Now.DayOfWeek
                    </span>
                    <span id="time"></span>
                </div>
                <div class="log">
                    <div class="login">
                        <span>亲！请</span>
                        <a href="#">[登录]</a>
                        <span>/</span>
                        <a href="#">[注册]</a>
                    </div>
                    <div class="logout" style="display:none">
                        <p class="tip" id="loginOutTip">
                            亲爱的,欢迎您,
                            <a class="logout" href="/User/LogOut">
                                [注销]
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar-body">
            @RenderBody()
        </div>
        <div class="navbar-foot">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 我的 Web 商城</p>
                <p class="foot-1">
                    <a href="#top">返回顶部</a>
                    <span>|</span>
                    <a href="http://singularitychina.com/" target="_blank">关于我们</a>
                    <span>|</span>
                    <a href="#">注册</a>
                    <span>|</span>
                    <a href="#">更多</a>
                </p>
                <p>
                    版权所有&copy;2016~Now Paranoid. 重庆理工大学奇点俱乐部17-1-2-C
                </p>
                <p>
                    渝ISO备9999999号
                </p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/JS/Shared/_Layout.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
