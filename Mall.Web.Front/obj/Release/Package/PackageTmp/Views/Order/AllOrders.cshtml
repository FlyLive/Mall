
@model IPagedList<Mall.Data.DataBase.Order>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "订单中心";
    Layout = "~/Views/Layout/_ClientLayout.cshtml";
}
<section class="content-header">
    <h1><i class="fa fa-reorder"></i><span>订单中心</span></h1>
</section>
<section class="content">
    <div class="order">
        <div class="search">
            <div class="search-state">
                <ul>
                    <li id="100" class="state-all" onclick="SearchOrderByState(this)"><i class="fa fa-reorder"></i><span>全部订单</span></li>
                    <li id="@((int)Mall.Data.Models.StateOfOrder.State.ToPay)" class="state-pay" onclick="SearchOrderByState(this)"><i class="fa fa-rmb"></i><span>待付款</span></li>
                    <li id="@((int)Mall.Data.Models.StateOfOrder.State.ToDelivery)" class="state-send" onclick="SearchOrderByState(this)"><i class="fa fa-send-o"></i><span>待发货</span></li>
                    <li id="@((int)Mall.Data.Models.StateOfOrder.State.ToReceipt)" class="state-confirm" onclick="SearchOrderByState(this)"><i class="fa fa-truck"></i><span>待收货</span></li>
                    <li id="@((int)Mall.Data.Models.StateOfOrder.State.ToEvaluate)" class="state-evaluate" onclick="SearchOrderByState(this)"><i class="fa fa-comments-o"></i><span>待评价</span></li>
                    <li id="@((int)Mall.Data.Models.StateOfOrder.State.Finish)" class="state-over" onclick="SearchOrderByState(this)"><i class="fa fa-bullseye"></i><span>交易完成</span></li>
                </ul>
            </div>
            <div class="search-orderId">
                <input id="orderId" type="text"maxlength="36" placeholder="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"/>
                <button class="search-submit" type="button" title="查询订单" onclick="SearchOrderId()">搜索</button>
            </div>
        </div>
        <div class="order-wrapper">
            <div class="order-title">
                <ul>
                    <li class="good-info">商品简介</li>
                    <li class="good-price">单价(元)</li>
                    <li class="good-count">数量</li>
                    <li class="good-freight">邮费(元)</li>
                    <li class="good-total">总价(元)</li>
                    <li class="order-state">订单状态</li>
                    <li class="order-action">操作</li>
                </ul>
            </div>
            <div class="order-list" id="order-list">
                @*@Html.Partial("");*@
                <ul>
                    <li class="order-item">
                        <div class="item-head">&emsp;<strong>下单时间:&emsp;@DateTime.Now</strong>&emsp;&emsp;&emsp;订单编号:&emsp;xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</div>
                        <ul class="item-info">
                            <li class="good-info"><div><a href=""><img src="~/Pictures/人类简史.jpg" /></a><div><p class="good-detail">Morbi sed mi luctus, tempor arcu nec, hendrerit purus.</p><p class="good-author">作者:&emsp;<span>张嘉佳</span></p></div></div></li>
                            <li class="good-price">￥45.00</li>
                            <li class="good-count">2</li>
                            <li class="good-freight">￥0.00</li>
                            <li class="good-total">￥45.00</li>
                            <li class="order-state"><span class="label label-warning">未付款</span></li>
                            <li class="order-action"><a onclick=""><span class="label label-danger">支付</span></a></li>
                        </ul>
                    </li>
                    <li class="order-item">
                        <div class="item-head">&emsp;<strong>下单时间:&emsp;@DateTime.Now</strong>&emsp;&emsp;&emsp;订单编号:&emsp;xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</div>
                        <ul class="item-info">
                            <li class="good-info"><div><a href=""><img src="~/Pictures/人类简史.jpg" /></a><div><p class="good-detail">Morbi sed mi luctus, tempor arcu nec, hendrerit purus.</p><p class="good-author">作者:&emsp;<span>张嘉佳</span></p></div></div></li>
                            <li class="good-price">￥45.00</li>
                            <li class="good-count">2</li>
                            <li class="good-freight">￥0.00</li>
                            <li class="good-total">￥45.00</li>
                            <li class="order-state"><span class="label label-warning">待发货</span></li>
                            <li class="order-action"><a onclick="" title="该订单当前状态无可执行操作" class="no-action"><span class="label label-default">无操作</span></a></li>
                        </ul>
                    </li>
                    <li class="order-item">
                        <div class="item-head">&emsp;<strong>下单时间:&emsp;@DateTime.Now</strong>&emsp;&emsp;&emsp;订单编号:&emsp;xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</div>
                        <ul class="item-info">
                            <li class="good-info"><div><a href=""><img src="~/Pictures/人类简史.jpg" /></a><div><p class="good-detail">Morbi sed mi luctus, tempor arcu nec, hendrerit purus.</p><p class="good-author">作者:&emsp;<span>张嘉佳</span></p></div></div></li>
                            <li class="good-price">￥45.00</li>
                            <li class="good-count">2</li>
                            <li class="good-freight">￥0.00</li>
                            <li class="good-total">￥45.00</li>
                            <li class="order-state"><span class="label label-warning">待收货</span></li>
                            <li class="order-action"><a onclick=""><span class="label label-info">确认收货</span></a></li>
                        </ul>
                    </li>
                    <li class="order-item">
                        <div class="item-head">&emsp;<strong>下单时间:&emsp;@DateTime.Now</strong>&emsp;&emsp;&emsp;订单编号:&emsp;xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</div>
                        <ul class="item-info">
                            <li class="good-info"><div><a href=""><img src="~/Pictures/人类简史.jpg" /></a><div><p class="good-detail">Morbi sed mi luctus, tempor arcu nec, hendrerit purus.</p><p class="good-author">作者:&emsp;<span>张嘉佳</span></p></div></div></li>
                            <li class="good-price">￥45.00</li>
                            <li class="good-count">2</li>
                            <li class="good-freight">￥0.00</li>
                            <li class="good-total">￥45.00</li>
                            <li class="order-state"><span class="label label-warning">待评价</span></li>
                            <li class="order-action"><a onclick=""><span class="label label-success">立即评价</span></a></li>
                        </ul>
                    </li>
                    <li class="order-item">
                        <div class="item-head">&emsp;<strong>下单时间:&emsp;@DateTime.Now</strong>&emsp;&emsp;&emsp;订单编号:&emsp;xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx</div>
                        <ul class="item-info">
                            <li class="good-info"><div><a href=""><img src="~/Pictures/人类简史.jpg" /></a><div><p class="good-detail">Morbi sed mi luctus, tempor arcu nec, hendrerit purus.</p><p class="good-author">作者:&emsp;<span>张嘉佳</span></p></div></div></li>
                            <li class="good-price">￥45.00</li>
                            <li class="good-count">2</li>
                            <li class="good-freight">￥0.00</li>
                            <li class="good-total">￥45.00</li>
                            <li class="order-state"><span class="label label-success">交易完成</span></li>
                            <li class="order-action"><a onclick="" title="该订单当前状态无可执行操作" class="no-action"><span class="label label-default">无操作</span></a></li>
                        </ul>
                    </li>
                </ul>
                <div class="page-contorl">
                    每页 @Model.PageSize 条记录,共 @Model.Count 条记录,共 @Model.PageCount 页,当前第 @Model.PageNumber 页
                    <div class="list-contorl-button">
                        @Html.PagedListPager(Model, page => Url.Action("AllOrders", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section css{
    @Styles.Render("~/Css/Order/AllOrders.css")
}
@section scripts{
    @Scripts.Render("~/JS/Order/AllOrders.js")
    @Scripts.Render("~/JS/Shared/layer_open_tip.js")
}