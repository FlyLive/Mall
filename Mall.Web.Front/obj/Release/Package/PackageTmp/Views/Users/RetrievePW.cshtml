
@{
    ViewBag.Title = "RetrievePW";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="retrieve-head">
    <h2 class="retrieve-head-titel">找回密码</h2>
    <div class="retrieve-head-right">
        <a href="Registe">注册</a>
        |
        <a href="Index">登录</a>
    </div>
</div>
<div class="retrieve-body">
    <p class="retrieve-body-sign">
        <i class="fa fa-exclamation-circle" style="color:#68b5e2;"></i>&ensp;请输入您注册时使用的用户名和Email
    </p>
    <div class="retrieve-name">
        <span class="retrieve-name-input">账户:&emsp;&ensp;</span>
        <input name="account" id="account" placeholder="注册名/登录名" />
        <span>忘记登录名？联系客服或重新注册</span>
    </div>
    <div class="retrieve-email">
        <span class="retrieve-email-input">Email:&emsp;</span>
        <input name="email" id="email" placeholder="注册时的邮箱" type="email" />
    </div>
    <div class="retrieve-submit">
        <button id="getCode-button" onclick="ClientConfirm()" type="button">获取验证码</button>
    </div>
</div>
@Html.Partial("Users/_ReSetPW")
@Html.Partial("Users/_ConfirmVerifyCode")
@section css{
    @Styles.Render("~/Css/Users/RetrievePW.css")
}
@section scripts{
    @Scripts.Render("~/JS/Users/RetrievePW.js")
    @Scripts.Render("~/JS/Shared/layer_open_tip.js")
}