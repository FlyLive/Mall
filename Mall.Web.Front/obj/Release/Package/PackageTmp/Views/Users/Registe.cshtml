
@{
    ViewBag.Title = "Registe";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="registe_wap">
    <div class="registe_body">
        <div>
            <h2>注册</h2>
            <div>
                <form action="Registe" name="registe" method="post">
                    <p class="registe_sign">您的姓名<span class="registe_notice">(登录名)</span></p>
                    <input name="name" id="name" class="registe_input" type="text" placeholder="账户" />

                    <p class="registe_sign">密码</p>
                    <input name="fPWord" id="fPWord" class="registe_input" type="password" placeholder="密码" />

                    <p class="registe_sign registe_confirm">确认密码</p>
                    <input name="sPWord" id="sPWord" class="registe_input" type="password" placeholder="确认密码" />

                    <p class="registe_sign registe_email">邮箱<span class="registe_notice">(忘记密码时找回密码)</span></p>
                    <input name="email" id="email" class="registe_input" type="email" placeholder="邮箱" />

                    <div class="registe_condition registe_notice">
                        <input name="agree" id="agree" type="checkbox" value="check" />我已阅读并同意网站的
                        <a href="">使用条件</a>
                        <span>及</span>
                        <a href="">隐私声明</a>
                    </div>
                    <button class="registe_button registe_registe" onclick="Registe()" type="button">立即注册</button>
                </form>
            </div>
            <div class="registe_notice">
                <fieldset class="has-account">
                    <legend>
                        已有账户?
                        <a class="registe_login registe_notice" href="Index">登录</a>
                    </legend>
                </fieldset>
            </div>
        </div>
    </div>
</div>
@section css{
    @Styles.Render("~/Css/Users/Registe.css")
}
@section scripts{
    @Scripts.Render("~/JS/Users/Registe.js")
}
@{
    var registe = TempData["Registe"];
    if (registe != null && registe.Equals("false"))
    {
        <script>
            layer.open({
                title: '错误提示',
                content: '注册失败了,请重试或联系客服,给您带来的不便敬请谅解！',
                icon: 5,
            })
        </script>
    }
}