@model List<Mall.Web.Front.ViewModel.ShoppingCartViewModel>

<ul>
    @{
        if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <li class="shoppingCart-item" id="@item.ShoppingCartId">
                    <ul>
                        <li class="check"><input type="checkbox" value="@item.Goods.GoodsId" /></li>
                        <li class="detail">
                            <a href="">
                                <img src="@item.Goods" />
                            </a>
                            <p>@item.Goods.GoodsName</p>
                        </li>
                        <li id="price" class="money">@item.Goods.Price</li>
                        <li><span class="reset-count" onclick="ReduceCount(this)">-</span><input id="count" value="@item.Number" class="count" min="1" disabled="disabled" /><span class="reset-count" onclick="IncreaseCount(this)">+</span></li>
                        <li id="fright" class="money">@item.Goods.freight</li>
                        <li id="totla" class="money">@(item.Goods.Price * item.Number + @item.Goods.freight)</li>
                        <li class="action"><a onclick="BuyGood()"><span class="buy">立即下单</span></a><a onclick="DeletGoods()"><span class="delet">删除</span></a></li>
                    </ul>
                </li>
            }
        }
        else
        {
            <li class="no-goods"><h2>未查询到相关商品!请验证后重试</h2></li>
        }
    }
</ul>