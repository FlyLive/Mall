<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <link href="~/Css/Shared/MenuViewHeader.css" rel="stylesheet" />
    <link href="~/Css/Shared/Foot.css" rel="stylesheet" />
    <link href="~/Css/Shared/Head.css" rel="stylesheet" />
    <!-- bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- font-awesome.css -->
    <link href="~/Css/Shared/font-awesome.min.css" rel="stylesheet" />
    <!-- Jquery -->
    <script src="~/JS/Shared/jquery-2.2.3.min.js"></script>
    <!-- layer.js -->
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Content/laypage/laypage.js"></script>
    <script src="~/JS/Shared/layer_open_tip.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @Html.Partial("_Head")

        <div class="content-wrapper">
            @Html.Partial("MenuView/_Header")

            @RenderBody()
        </div>

        @Html.Partial("MenuView/_SideBar")

        <footer class="main-footer">
            @Html.Partial("_Foot")
        </footer>
    </div>

    <script src="~/JS/Layout/_Layout.js"></script>
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   @* <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>*@
    <script src="~/JS/MenuView/app.js"></script>
    @RenderSection("css", required: false)
    @RenderSection("scripts", required: false)
    <script>
        $.ajax({
            type: 'Get',
            url: '/Custom/GetCartNumber',
            success: function (result) {
                $(".message-menu .label-info").text(result);
            },
            error: function () {
            }
        })

        $.ajax({
            type: 'Get',
            url: '/Order/GetUnfinishedNumber',
            success: function (result) {
                $(".message-menu .label-default").text(result);
            },
            error: function () {
            }
        })
    </script>
</body>
</html>
