
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="login_wap">
    <div class="login_body">
        <div>
            <h2>登录</h2>
            <div>
                <form action="Login" method="post">
                    <p class="login_sign">账户</p>
                    <input name="name" class="login_input" type="text" placeholder="账户" />
                    <p class="login_sign">
                        密码
                        <span class="login_forget">
                            <a href="RetrievePW">忘记密码?</a>
                        </span>
                    </p>
                    <input name="password" class="login_input" type="password" placeholder="密码" />
                    <button class="login_button login_login" type="submit">登录</button>
                </form>
            </div>
            <fieldset class="no-account">
                <legend>还没有账户?</legend>
            </fieldset>
            <div>
                <form action="Registe" method="get">
                    <button class="login_button login_registe">注册</button>
                </form>
                <p>欢迎使用云翳书籍商城,希望您购物愉快</p>
            </div>
        </div>
    </div>
</div>

@section css{
    @Styles.Render("~/Css/Users/Index.css")
}
@{
    var loginError = TempData["loginError"];
    if (loginError != null)
    {

        if (loginError.Equals("input"))
        {
            <script>
                layer.open({
                    title: '错误提示',
                    content: '请输入正确的账户和密码',
                });
            </script>
        }
        else if (loginError.Equals("password"))
        {
            <script>
                layer.open({
                    title: '错误提示',
                    content: '账户不存在或密码错误',
                });
            </script>
        }
    }
}