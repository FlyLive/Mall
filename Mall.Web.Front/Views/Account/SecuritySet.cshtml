
@{
    ViewBag.Title = "SecuritySet";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<h2>SecuritySet</h2>

<div class="security-set">
    <div class="security-set-title">
        <h4>管理密码</h4>
    </div>
    <div class="security-set-log">
        <div class="log-tip">
            <h4>登录密码</h4>
        </div>
        <div class="pay-password">
            <p class="title"><span class="star">*</span>旧登录密码</p>
            <input id="old_log_password" type="hidden"/>
            <input id="input_log_password" type="password" />
            <button onclick="ConfirmLP()" type="button">确认</button>
        </div>
    </div>
    <div class="security-set-pay">
        <div class="pay-tip">
            <h4>支付密码</h4>
        </div>
        <div class="pay-password">
            <p class="title"><span class="star">*</span>旧支付密码</p>
            <input id="old_pay_password" type="hidden" />
            <input id="input_pay_password" type="password" />
            <button onclick="ConfirmPP()" type="button">确认</button>
        </div>
    </div>
</div>
@Html.Partial("ChangeLP");
@Html.Partial("ChangePP");
@section css{
    <link href="~/Css/Account/SecuritySet.css" rel="stylesheet" />
}
@section scripts{
    <!--<script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>-->
    @Scripts.Render("~/JS/Account/SecuritySet.js")
}
@{ 
    Mall.Data.DataBase.Client client = (Mall.Data.DataBase.Client)Session["Client"];
    if(client != null)
    {
        <script>
            $("#old_log_password").val(@client.User.Password);
            $("#old_pay_password").val(@client.PayPassword);
        </script>
    }
}