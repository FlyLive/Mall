
@model Mall.Web.Front.ViewModel.OrderViewModel
@using Mall.Service.Models

@{
    ViewBag.Title = "订单详情";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="OD-head">
    <h2>订单详情</h2>
</div>
<div class="OD-state">
    <div class="OD-state-course">
        <ul>
            <li><p><i class="fa fa-rmb"></i>待付款</p></li>
            <li><p><i class="fa fa-send-o"></i>待发货</p></li>
            <li><p><i class="fa fa-truck"></i>待收货</p></li>
            <li><p><i class="fa fa-comments-o"></i>待评价</p></li>
            <li><p><i class="fa fa-bullseye"></i>交易完成</p></li>
        </ul>
    </div>
    <div class="OD-state-detail">
        <h3>订单状态:</h3>
        <ul>
            <li>
                @switch (Model.State)
                {
                    case (int)StateOfOrder.State.Cancle:<span>已取消</span>; break;
                    case (int)StateOfOrder.State.ToPay:<span style="color:red;">未付款</span>; break;
                    case (int)StateOfOrder.State.ToAccept:
                    case (int)StateOfOrder.State.ToDelivery:<span>待发货</span>; break;
                    case (int)StateOfOrder.State.ApplyRefund:<span style="color:#0094ff;">申请退款中</span>; break;
                    case (int)StateOfOrder.State.Refunded:<span style="color:green;">已退款</span>; break;
                    case (int)StateOfOrder.State.ToReceipt:<span>待收货</span>; break;
                    case (int)StateOfOrder.State.ToEvaluate:<span>待评价</span>; break;
                    case (int)StateOfOrder.State.ToReply:
                    case (int)StateOfOrder.State.Finish:<span style="color:green;">交易完成</span>; break;
                    case (int)StateOfOrder.State.ApplyReturn:
                    case (int)StateOfOrder.State.Returning:<span>申请退货中</span>; break;
                    case (int)StateOfOrder.State.ReturnSucceed:<span style="color:green;">退货成功</span>; break;
                    case (int)StateOfOrder.State.ReturnFailed:<span style="color:red;">退货失败</span>; break;
                }
            </li>
            <li>如有疑问，请联系客服</li>
        </ul>
    </div>
</div>
<div class="OD-sign">
    <span><i class="fa fa-exclamation-circle"></i></span>
    此结果由云翳网站提供
</div>
<div class="OD-infor">
    @Html.Partial("ViewComponents/_OrderDetails", Model)
</div>
@section css{
    @Styles.Render("~/Css/Order/OrderDetails.css")
}