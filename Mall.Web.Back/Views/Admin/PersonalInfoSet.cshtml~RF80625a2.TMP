
@{
    ViewBag.Title = "PersonalInfoSet";
    Layout = "~/Views/Layout/_AdminTLE.cshtml";
}

<h2>PersonalInfoSet</h2>
<div class="info-set">
    <form action="" method="post">
        <div class="info-set-tip">
            <h4>亲爱的管理XXX，认真填写资料，有助于与顾客交流哦！</h4>
        </div>
        <div class="info-set-head info">
            <p class="title">当前头像:</p>
            <img src="~/Pictures/Shared/contact.png" />
        </div>
        <div class="info-set-nick info">
            <p class="title"><span class="star">*</span>昵称:</p>
            <input type="text" value="" />
        </div>
        <div class="info-set-name info">
            <p class="title">真实姓名:</p>
            <input type="text" value="" />
            <p class="no-change title"><span class="star">*</span>真实姓名不可更改</p>
        </div>
        <div class="info-set-gender info">
            <p class="title">性别:</p>
            <label><input name="gender" type="radio" />男</label>
            <label><input name="gender" type="radio" />女</label>
        </div>
        <div class="info-set-birthday info">
            <p class="title">生日:</p>
            <input type="datetime" value="" />
        </div>
        <div class="info-set-phone info">
            <p class="title"><span class="star">*</span>联系电话:</p>
            <input type="number" maxlength="11" />
        </div>
        <div class="info-set-email info">
            <p class="title"><span class="star">*</span>邮箱:</p>
            <input type="email" />
        </div>
        <div class="info-set-submit info">
            <button type="submit">保存修改</button>
        </div>
    </form>
</div>
@section css{
    <link rel="stylesheet" href="~/Css/Admin/PersonalInfoSet.css" />
}