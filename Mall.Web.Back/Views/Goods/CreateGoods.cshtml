
@{
    ViewBag.Title = "CreateGoods";
    Layout = "~/Views/Layout/_AdminTLE.cshtml";
}

<section class="content-header">
    <h1><i class="fa fa-plus-square-o"></i>CreateGoods</h1>
</section>
<section class="content">
    <div class="createGoods-all">
        <table>
            <tr>
                <td>
                    <div class="createGoods-left">
                        <div class="createGoods-left-class">
                            <p class="title">分类</p>
                            <ul>
                                <li>
                                    <label>
                                        <input name="recommend" type="checkbox" value="1" />类别一
                                    </label>
                                </li>
                                <li>
                                    <label>
                                        <input name="recommend" type="checkbox" value="2" />类别二
                                    </label>
                                </li>
                                <li>
                                    <label>
                                        <input name="recommend" type="checkbox" value="3" />类别三
                                    </label>
                                </li>
                            </ul>
                        </div>
                        <div>
                            <p class="title"><span class="star">*</span>商品名</p>
                            <input name="name" id="name" class="input" type="text" placeholder="商品名" />
                        </div>
                        <div>
                            <p class="title">作者</p>
                            <input name="author" id="author" class="input" type="text" placeholder="作者" />
                        </div>
                        <div>
                            <p class="title">出版社</p>
                            <input name="press" id="press" class="input" type="text" placeholder="出版社" />
                        </div>
                        <div>
                            <p class="title">出版日期</p>
                            <input name="publicationDate" id="publicationDate" class="input" type="date" />
                        </div>
                        <div>
                            <p class="title"><span class="star">*</span>数量</p>
                            <input name="count" id="count" class="input" min="1" value="+1" placeholder="+123" />
                            <p class="sign"><span class="star">*</span>格式&emsp;+123</p>
                        </div>
                        <div>
                            <p class="title"><span class="star">*</span>价格</p>
                            <input name="price" id="price" class="input" type="text" placeholder="+123.00" />
                            <p class="sign"><span class="star">*</span>格式&emsp;+123.00</p>
                        </div>
                        <div>
                            <p class="title">运费</p>
                            <input name="freight" id="freight" class="input" type="text" placeholder="+123.00" />
                            <p class="sign"><span class="star">*</span>格式&emsp;+123.00</p>
                        </div>
                        <div>
                            <p class="title"><span class="star">*</span>详细介绍</p>
                            <textarea name="detail" id="detail" rows="3" placeholder="详情"></textarea>
                        </div>
                        <div class="createGoods-left-submit">
                            <button type="button" onclick="CreateGoodsImg()">添加图片</button>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="createGoods-right">
                        <div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h3>销售图片</h3>
                                    <input type="file" multiple id="ssi-upload" />
                                </div>
                            </div>
                        </div>
                        <div class="createGoods-right-submit">
                            <button type="button" onclick="CreateGoods()">立即添加</button>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</section>
@section css{
    @Styles.Render("~/Css/Goods/CreateGoods.css")
    @Styles.Render("~/Css/Goods/ssi-uploader.css")
}
@section scripts{
    @Scripts.Render("~/JS/Goods/CreateGoods.js")
    @Scripts.Render("~/JS/Shared/layer_open_tip.js")
    @Scripts.Render("~/JS/Shared/ssi-uploader.js")
}