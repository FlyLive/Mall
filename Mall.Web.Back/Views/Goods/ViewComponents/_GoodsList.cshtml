
@model PagedList.IPagedList<Mall.Web.Back.ViewModel.GoodsInfoViewModel>

<ul>
    @if (Model.Count == 0)
    {
        <li class="no-result">
            <h3>暂无该状态下的商品！</h3>
        </li>
    }
    else
    {
        for (var i = 0; i < Model.Count; i++)
        {
            <li class="order-item @(i % 2 == 0 ? "even" : "odd") good-item" id="@Model[i].GoodsId">
                <ul>
                    <li class="order-list">@(i+1)</li>
                    @Html.Partial("Goods/_GoodItem", Model[i])
                </ul>
            </li>
        }
    }
</ul>