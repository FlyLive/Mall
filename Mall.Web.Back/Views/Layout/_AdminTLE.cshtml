<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    <link href="~/Css/MenuView/AdminLTE.css" rel="stylesheet" />
    <link href="~/Css/MenuView/_all-skins.css" rel="stylesheet" />
    <link href="~/Css/MenuView/blue.css" rel="stylesheet" />
    <link href="~/Css/MenuView/morris.css" rel="stylesheet" />
    <link href="~/Css/Shared/Foot.css" rel="stylesheet" />
    <link href="~/Css/Shared/MenuViewHead.css" rel="stylesheet" />
    <!-- bootstrap 3.3.7 -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!-- font-awesome.css -->
    <link href="~/Css/Shared/font-awesome.min.css" rel="stylesheet" />
    <!-- Jquery -->
    <script src="~/JS/Shared/jquery-2.2.3.min.js"></script>
    <!-- layer.js -->
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Content/laypage/laypage.js"></script>
    <script src="~/JS/Shared/layer_open_tip.js"></script>
    <script src="~/JS/Shared/ManageConfirm.js"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        @Html.Partial("MenuView/_Header")

        <div class="content-wrapper">

            @RenderBody()

        </div>

        @Html.Partial("MenuView/_SideBar")

        @Html.Partial("MenuView/_ControlSideBar")

        <footer class="main-footer">

            @Html.Partial("_Foot")

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/JS/MenuView/app.js"></script>
    @RenderSection("css", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
