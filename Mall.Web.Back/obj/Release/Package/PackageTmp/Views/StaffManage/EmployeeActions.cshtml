@model List<Mall.Web.Back.ViewModel.AdminLogViewModel>

<div class="employee-action-title">
    <ul>
        <li class="action-handle">操作者</li>
        <li class="action-time">时间</li>
        <li class="action-style">类型</li>
        <li class="action-permission">使用权限</li>
        <li class="action-object">操作对象</li>
        <li class="action-detail">详情</li>
    </ul>
</div>
<div class="employee-action-content">
    <ul>
        @{
            if (Model.Count == 0)
            {
                <li class="action-item even no-action">该员工暂未进行任何操作…………</li>
            }
            else
            {
                for (var i = 0; i < Model.Count; i++)
                {
                    <li class="action-item @(i % 2 == 0 ? "even" : "odd") ">
                        <ul>
                            <li class="action-handle" title="@Model[i].Operater">@(Model[i].Operater.Length >= 8 ? Model[i].Operater.Substring(0, 7) + "…" : Model[i].Operater)</li>
                            <li class="action-time" title="@Model[i].OperationTime">@Model[i].OperationTime.ToString().Substring(0, 9) …</li>
                            <li class="action-style" title="@Model[i].Style">@(Model[i].Style.Length >= 5 ? Model[i].Style.Substring(0, 4) + "…" : Model[i].Style)</li>
                            <li class="action-permission" title="@Model[i].Permission">@(Model[i].Permission.Length >= 5 ? Model[i].Permission.Substring(0,4) + "…" : Model[i].Permission)</li>
                            <li class="action-object" title="@Model[i].Object">@(Model[i].Object.Length >= 6 ? Model[i].Object.Substring(0, 5) + "…" : Model[i].Object)</li>
                            <li class="action-detail" title="@Model[i].OperatDetail">@(Model[i].OperatDetail.Length >= 36 ? Model[i].OperatDetail.Substring(0,35) + "…" : Model[i].OperatDetail)</li>
                        </ul>
                    </li>
                }
            }
        }
    </ul>
</div>