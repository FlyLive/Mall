@model Mall.Web.Back.ViewModel.GoodsInfoViewModel

<div>
    <p class="title"><span class="star">*</span>商品名</p>
    <input name="name" id="name" class="input" type="text" placeholder="商品名" value="@Model.GoodsName"/>
</div>
<div>
    <p class="title">作者</p>
    <input name="author" id="author" class="input" type="text" placeholder="作者" value="@Model.Author"/>
</div>
<div>
    <p class="title">出版社</p>
    <input name="press" id="press" class="input" type="text" placeholder="出版社" value="@Model.Press"/>
</div>
<div>
    <p class="title">出版日期</p>
    <input name="publicationDate" id="publicationDate" class="input" type="date" value="@Model.PublicationDate"/>
</div>
<div>
    <p class="title"><span class="star">*</span>价格</p>
    <input name="price" id="price" class="input" type="text" placeholder="+123.00" value="+@Model.Price"/>
    <p class="sign"><span class="star">*</span>格式&emsp;+123.00</p>
</div>
<div>
    <p class="title">运费</p>
    <input name="freight" id="freight" class="input" type="text" placeholder="+123.00" value="+@Model.Freight"/>
    <p class="sign"><span class="star">*</span>格式&emsp;+123.00</p>
</div>
<div>
    <p class="title"><span class="star">*</span>详细介绍</p>
    <textarea name="detail" id="detail" rows="3" placeholder="详情" >@Model.Details</textarea>
</div>
<div class="goods-edit-submit">
    <button type="button" onclick="ModifyGoods()">修改信息</button>
</div>